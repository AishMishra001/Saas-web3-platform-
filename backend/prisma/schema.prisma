generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int          @id @default(autoincrement())
  address        String       @unique                            // wallet public address 
}

model Task {
  id             Int          @id @default(autoincrement())
  title          String
}

model Options {
  id             Int          @id @default(autoincrement())
  image_url      String 
  option_id      Int  
}

model Worker {
  id             Int          @id @default(autoincrement())
  address        String       @unique 
}